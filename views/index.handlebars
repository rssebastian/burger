 <div class="container">

  <div class="jumbotron">
    <center>
      <h1><strong>Eat Da Burger!</strong></h1>

      <h2>Add your burger, then eat it!</h2>
    
      <img src="./assets/img/burger.png">
    </center>

  </div>

  <div class="row">
    <div class="col-md-6">
        <div class="panel-body">
          <center>
            <h2>Need to Eat Burgers!</h2>
            <ul>
              {{#each burgers}}
                {{#unless this.devoured}}
                  <li>
                    {{this.burger_name}}

                    <form action="/{{this.id}}?_method=PUT" method="POST">
                      <input type="hidden" name="eatButton" value="true">
                      <button type="submit" class="btn btn-default">Devour it!</button>
                    </form>

                  </li>
                {{/unless}}
              {{/each}}
            </ul>
          </center>
        </div>
    </div>

    <div class="col-md-6">
      <div class="panel-body">
        <center>
          <h2>Eaten Burgers!</h2>

          <ul>
            {{#each burgers}}
              {{#if this.devoured}}
                <li>
                  {{this.burger_name}}
                </li>
              {{/if}}
            {{/each}}
          </ul>
        </center>
      </div>
    </div>
  </div>

  <div class="row">
    <center>
      <h2>Add a Burger</h2>
      <form class="create-update-form" action="/" method="POST">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <button type="submit" class="btn btn-default">Add Burger</button>
      </form>
    </center>
  </div>
<br>
<br>
</div>